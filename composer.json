{
    "name": "efabrica/phpstan-latte",
    "license": ["MIT"],
    "require": {
        "php": ">=7.4 <8.3",
        "ext-json": "*",
        "phpstan/phpstan": "^1.9.4",
        "phpstan/phpstan-nette": "^1.2",
        "latte/latte": "^2.11.6 | ^3.0.4",
        "nette/utils": "^3.2",
        "nette/finder": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "nette/application": "^3.1.2",
        "nette/forms": "^3.1",
        "nikic/php-parser": "^4.15",
        "efabrica/coding-standard": "^0.4"
    },
    "extra": {
        "phpstan": {
            "includes": [
                "rules.neon"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Efabrica\\PHPStanLatte\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Efabrica\\PHPStanLatte\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
